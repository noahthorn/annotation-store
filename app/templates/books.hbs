{{#paper-sidenav-container class="inner-sidenav"}}
<div id="book-list">
	{{#paper-sidenav
		class="md-whiteframe-z2"
		name="left"
		lockedOpen=this.isOpen}}
		{{#paper-toolbar}}
		{{#paper-toolbar-tools}}
		{{#paper-button iconButton=true onClick=(action "toggle")}}
		{{paper-icon "menu"}}
		{{/paper-button}}
		<h2>Books</h2>
		<span class="flex"></span>
		<PaperButton @iconButton=true @onClick={{action "helpButton"}}>
			{{paper-icon "help-outline"}}
		</PaperButton>
		{{/paper-toolbar-tools}}
		{{/paper-toolbar}}
		{{#paper-list class="independent-scroll"}}
		{{#each @model as |book|}}
		<LinkTo @route='books.passages' @model={{book.id}}>
			{{#paper-item class="md-2-line"}}
			{{paper-icon "book" class="md-avatar"}}
			<div class="md-list-item-text">
				<h3>{{book.title}}</h3>
				<i style="font-size: .8em;">{{book.author}}</i>
			</div>
			{{/paper-item}}
		</LinkTo>
		{{paper-divider}}
		{{/each}}
		{{/paper-list}}
		{{/paper-sidenav}}
	</div>

	<div id="help-pop" class="hide">
		<PaperCard as |card|>
		<card.content style="max-width: 250px;">
			Select a book from this menu to see its marked passages.
			Select a passage to view its annotations.
		</card.content>
	</PaperCard>
</div>

{{outlet}}

{{/paper-sidenav-container}}
