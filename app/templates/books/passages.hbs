<div id="inside-container">
	<div id="passages-list" class="md-whiteframe-z2">
		{{#paper-toolbar}}
		{{#paper-toolbar-tools}}
		<h2>{{@model.title}}</h2>
		{{/paper-toolbar-tools}}
		{{/paper-toolbar}}
		{{#paper-list class="independent-scroll"}}
		{{#each @model.passages as |passage|}}
		{{#paper-item class="md-3-line md-long-text"}}
		<div class="md-list-item-text">
			<LinkTo @route='books.passages.annotations' @model={{passage.id}}>{{passage.location}}</LinkTo>
			<p>{{passage.text}}</p>
		</div>
		{{/paper-item}}
		{{/each}}
		{{/paper-list}}
	</div>

	{{outlet}}

</div>