<div id="passage-container" class="md-whiteframe-z2">
	<div id="button-book-title">
		<PaperToolbar>
			<PaperToolbarTools>
				<div id="toggled-button" class="{{if this.isOpen "hide" "show"}}">
					<PaperButton @iconButton=true {{on "click" (fn toggle)}}>
					{{paper-icon "menu"}}
					</PaperButton>
				</div>
				<h2>{{@model.title}}</h2>
			</PaperToolbarTools>
		</PaperToolbar>
	</div>
	<div id="passages-list">
		{{#paper-list class="independent-scroll "}}
		{{#each @model.passages as |passage|}}
		{{#paper-item class="md-3-line md-long-text"}}
		<div class="md-list-item-text">
			<!-- <LinkTo @route='books.passages.annotations' @model={{passage.id}}>{{passage.location}}</LinkTo> -->
			<PaperButton {{on "click" (fn this.selectPassage passage.id)}} @primary=true>{{passage.location}}</PaperButton>
			<p>{{passage.text}}</p>
		</div>
		<div id="outlet-{{passage.id}}" class="hide">
			{{outlet}}
		</div>
		{{/paper-item}}
		{{/each}}
		{{/paper-list}}
	</div>
</div>